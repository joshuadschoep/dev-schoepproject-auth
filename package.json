    "lint:fix": "eslint ./src/**/*.ts ./test/**/*.ts --fix --max-warnings=0",
    "lint": "npm run lint:check",
    "test:ci": "jest --silent --verbose",
    "test:watch": "jest --watch",
    "test": "npm run test:watch -- --silent --verbose",
    "build": "NODE_ENV=prod webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshuadschoep/lambda-authorization.git"
  },
